<%= form_for @profile do |f| %>
	<br />
	<div class = "field">
		<%= f.label :bio %>:
		<%= f.text_field :bio %>
	</div>
	<br />
	<div class = "field">	
		<%= f.label :age %>:
		<%= f.select :age, (18..125) %>
	</div>
	<br />
	<div class = "field">
		<%= f.label :gender %>:
		<%= f.select :gender, ['Male','Female'] %>
	</div>
	<br />
	<div class = "field">
		<%= f.label :city %>:
		<%= f.text_field :city %>
	</div>
	<br />
<%= f.submit %>
<% end %>