<div class="row">
    <br />
    <br />
<div class="col s10 offset-s1" id='border'>
    <%= form_for @profile do |f| %>
    	<br />
    	<div class = "field">
    		<%= f.label :bio %>:
    		<%= f.text_field :bio %>
    	</div>
    	<br />
    	<div class = "field">
    		<%= f.label :age %>:
    		<%= f.number_field :age %>
    	</div>
    	<br />
    	<div class = "field">
    		<%= f.label :gender %>:
    		<%= f.radio_button :gender, 'Male' %>
        <%= f.label :gender, 'Male', value:'Male' %>
    		<%= f.radio_button :gender, 'Female' %>
        <%= f.label :gender, 'Female', value:'Female' %>
    	</div>
    	<br />
    	<div class = "field">
    		<%= f.label :city %>:
    		<%= f.text_field :city %>
    	</div>
    	<br />
    <div class="btn-large waves-effect waves-light">
        <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>
